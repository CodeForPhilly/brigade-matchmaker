/**
/* URL test/projectlist
*/

extends layout
block content
	div.container.container-maxWidth970
		form#wizardcards
			ul(id="progressbar")
				li(id="start" class="active") Profile
				li(id="start_matching") ..Working
				li(id="matched") Matched

			br
			div.interest_profile
				form
					h3 Hello Civic Enthusiast!
					p Create a simple profile and let us help you decide which project teams are a match for you. Your information will not be saved and will only be shared with the project team leads that you choose to message.
					hr
					h3 Profile
					p
					br
					hr(color="#cccccc")
					h4 Skills that I want to contribute
					div.form-group
						div(id="skills")
							select(class="chosen-select", data-placeholder="Select all that apply. * 3 skills max", multiple style="width: 350px", tabindex="1")
								- var list = skills
								each item, j in list
									if item.synonyms != ''
										option(value= j) #{item.name}, #{item.synonyms}
									else
										option(value= j) #{item.name}

									//added inclusion of synonyms to each list

					br
					hr(color="#cccccc")
					h4 Civic issues of interest
					div.form-group
						div(id="interests")
							select(class="chosen-select", id="ints", data-placeholder="Select all that apply.  * 3 interests max", multiple style="width: 350px", tabindex="1")
								- var list = interests
								each item, j in list
									if item.synonyms != ''
										option(value= j) #{item.name}, #{item.synonyms}
									else
										option(value= j) #{item.name}
					br
					hr(color="#cccccc")
					h4 My goals
					div.form-group
						div(id="goals")
							select(class="chosen-select", data-placeholder="Choose your Goals", multiple style="width: 350px", tabindex="1")
								- var list = goals
								each item, j in list
									if item.synonyms != ''
										option(value= j) #{item.name}, #{item.synonyms}
									else
										option(value= j) #{item.name}
					br

				div.button__horiz-group(role="group" aria-label="...")

					button(type="button" role="in_progress_message" class="next btn btn-warning button__more-margins btn--hidden") Hang on a second!

					button(type="button" role="start_matching" class="next btn btn-info button__more-margins") Match me!

					button(type="button" role="see_results" class="next btn btn-primary button__more-margins btn--hidden") See results!

			div#umtemplate.container-maxWidth970-no-top-pad.row.row--proj-container.btn--hidden
				section.col-sm-2
					img.project-thumbnail
					button(id="teamAddr" class="btn btn-large btn-primary mail-icon__centered" role="button" data-leader="" info="") Contact Team
				section.col-sm-10
					div.row.row--proj-info1
						section#pName.col-sm-4 Needs Project Name
						section#pMission.col-sm-8 Project Mission Statement
					div.row.row--proj-matchConfigs
						br
						section.col-sm-4
							button(id="saveIt" class="btn btn-large btn-success saveIt__centered" role="button" data-leader="" info="") Save it!
						section.col-sm-8.section--remove-left-padding
							section#pSkills.col-sm-8 Skills:
							section#pGoals.col-sm-8	Goal sought:
							section#pInterests.col-sm-8	Focus areas:

						br


			div#match_res.btn--hidden
				div
					div.row
						//section.col-sm-2
						//	img(src="")
						section.col-sm-8
							h4.large-hero--font-narrow You are matched!<br>Explore the details of the project teams, and connect to the teams that you are interested in. When you connect, a message with your profile and email will be sent to the project team lead(s).
							br
							h2.h1--icon-before You searched for:


					div.row.matchingConfigs-list

						section.section__matchGoal.col-sm-4
							h4#searchgoals.config Goals:

						section.section__matchSkill.col-sm-4
							h4#searchskills.config Skills:

						section.section__matchInterest.col-sm-4
							h4#searchinterests.config Interests:



					include partials/_contactTeamForm
					include partials/_savedProjs

					br
					h2.h1--more-margin  Your matching projects:
					div#pList.container
						//
						//matching list will be appended here
						//

						<br />
			div.text-center
				div.btn-group(role="group" aria-label="...")
					button(type="button" id="backToWizard" class="btn btn-primary button__more-margins btn--hidden") Restart the Matching Hat wizard
