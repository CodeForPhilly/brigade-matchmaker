{{outlet}}

<form {{action 'save' on="submit"}}>

<div class="row">
  <div class="col-md-3"></div>
  
  <div class="col-md-6" style="text-align:center;">
    {{#if model}}
    <h3>Edit Project</h3>ID {{model.id}}
    {{else}}
    <h3>Create A New Project</h3>
    {{/if}}
  </div>
  
  <div class="col-md-3"></div>
</div>

<div class="row">
  <div class="col-md-3"></div>
  
  <div class="col-md-6">
    
    <div class="panel panel-default">
      <div class="panel-body">
  
        <div class="form-group">
          <label for="contactName">Project Name</label>
          {{input type="text" value=model.name class="form-control" placeholder="Project Name" }}
        </div>
      
        <div class="form-group">
          <label for="contactName">Contact Name</label>
          <input type="text" class="form-control" placeholder="Contact Name">
        </div>
        
        <div class="form-group">
          <label for="contactEmail">Contact Email Address</label>
          <input type="email" class="form-control" placeholder="Contact Email">
        </div>

        <div class="form-group">
          <label for="summary">Summary (Short Sentence)</label>
          <textarea class="form-control" rows="3"></textarea>
        </div>
        
        <button type="submit" class="btn btn-default pull-right">Submit</button>
  
      </div>
    </div>
  
  </div>
  
  <div class="col-md-3"></div>
  
</div>
  
</form>
